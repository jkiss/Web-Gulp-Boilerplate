@import 'nib'
@import 'custom/reset'

x-reset()

@font-face{
  font-family: 'cgtn';
  src: url('fonts/font-name.eot');
  src: url('fonts/font-name.eot?#iefix') format('embedded-opentype'),
       url('fonts/font-name.woff2') format('woff2'),
       url('fonts/font-name.woff') format('woff'),
       url('fonts/font-name.ttf') format('truetype'),
       url('fonts/font-name.svg') format('svg');
  font-weight: normal;
  font-style: normal;
}

abs-center(w, h)
  position absolute
  left 50%
  top 50%
  width w
  height h
  margin-left -1 * (w / 2)
  margin-top -1 * (h / 2)

/* Example */
.main-box
  position relative
  width 100%
  height 100%
  overflow hidden
    
  for n in 2 3 4 5 6
    .page:nth-child({n})
      left 16.66% * (n - 1)


@media screen and (max-width: 1100px)
  .page3 .page3-footer .data-source
    text-align left


/* Tool */
.transition
  transition opacity .5s, width .5s, height .5s, margin .5s

.transition-1
  transition opacity 1s

.hide
  opacity 0

.none
  display none
